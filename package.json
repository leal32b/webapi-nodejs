{
  "name": "webapi-nodejs",
  "version": "1.0.0",
  "engines": {
    "node": "^16.15.1",
    "npm": "^8.11.0"
  },
  "type": "module",
  "description": "Nodejs Webapi template",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leal32b/webapi-nodejs.git"
  },
  "author": "leal32b",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/leal32b/webapi-nodejs/issues"
  },
  "homepage": "https://github.com/leal32b/webapi-nodejs#readme",
  "_moduleAliases": {
    "@/core": "dist/core",
    "@/communication": "dist/modules/communication",
    "@/user": "dist/modules/user"
  },
  "scripts": {
    "start": "node dist/core/4.main/server.js",
    "debug": "nodemon dist/core/4.main/server.js -L --watch dist --inspect=0.0.0.0:9222 --nolazy",
    "build": "rimraf dist && tsc -b tsconfig.build.json",
    "build:watch": "npm run build -- -w",
    "docker:up": "docker-compose run --rm start_dependencies",
    "docker:down": "docker-compose down",
    "docker:attach": "docker attach --sig-proxy=false webapi-container",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm -- migration:generate -d src/core/3.infra/persistence/postgres/data-sources/postgres-default.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/core/3.infra/persistence/postgres/data-sources/postgres-default.ts",
    "eslint": "eslint 'src/**' --fix",
    "vitest": "vitest",
    "vitest:ci": "npm run vitest -- --coverage",
    "test": "node --expose-gc ./node_modules/.bin/jest --passWithNoTests --no-cache --runInBand --silent --noStackTrace --logHeapUsage",
    "test:verbose": "jest --passWithNoTests --no-cache --runInBand",
    "test:unit": "npm test -- -c jest-unit.config.js --watch",
    "test:integration": "npm test -- -c jest-integration.config.js --watch",
    "test:ci": "npm test -- --coverage",
    "prepare": "if test $NODE_ENV = test; then husky install; fi"
  },
  "dependencies": {
    "ajv": "^8.11.0",
    "argon2": "^0.29.1",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mongodb": "^4.11.0",
    "nodemailer": "^6.8.0",
    "nodemon": "^2.0.20",
    "pg": "^8.8.0",
    "pg-mem": "^2.6.3",
    "swagger-ui-express": "^4.5.0",
    "typeorm": "^0.3.10"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@shelf/jest-mongodb": "^4.1.1",
    "@swc/core": "^1.3.11",
    "@swc/jest": "^0.2.23",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.0",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.11.3",
    "@types/nodemailer": "^6.4.6",
    "@types/pg": "^8.6.5",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@vitest/coverage-istanbul": "^0.24.3",
    "eslint": "^8.25.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-promise": "^6.1.1",
    "git-commit-msg-linter": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^29.2.1",
    "lint-staged": "^13.0.3",
    "rimraf": "^3.0.2",
    "supertest": "^6.3.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "vitest": "^0.24.3"
  }
}
