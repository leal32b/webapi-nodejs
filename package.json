{
  "name": "webapi-nodejs",
  "version": "1.0.0",
  "description": "Nodejs Webapi template",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leal32b/webapi-nodejs.git"
  },
  "author": "leal32b",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/leal32b/webapi-nodejs/issues"
  },
  "homepage": "https://github.com/leal32b/webapi-nodejs#readme",
  "_moduleAliases": {
    "@": "dist"
  },
  "scripts": {
    "start": "node dist/4.main/server.js",
    "debug": "nodemon dist/4.main/server.js -L --watch dist --inspect=0.0.0.0:9222 --nolazy",
    "build": "rimraf dist && tsc -b tsconfig.build.json",
    "build:watch": "npm run build -- -w",
    "docker:up": "docker-compose run --rm start_dependencies",
    "docker:down": "docker-compose down",
    "migration:create": "NODE_ENV=test typeorm migration:create -n",
    "migration:generate": "NODE_ENV=test ts-node -T ./node_modules/.bin/typeorm migration:generate -n",
    "migration:run": "NODE_ENV=test ts-node -T ./node_modules/.bin/typeorm migration:run",
    "eslint": "eslint 'src/**' --fix",
    "test": "jest --passWithNoTests --no-cache --runInBand --silent --noStackTrace",
    "test:verbose": "jest --passWithNoTests --no-cache --runInBand",
    "test:unit": "npm test -- -c jest-unit.config.js --watch",
    "test:integration": "npm test -- -c jest-integration.config.js --watch",
    "test:staged": "npm test -- --findRelatedTests test",
    "test:ci": "npm test -- --coverage"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "module-alias": "^2.2.2",
    "mongodb": "^4.5.0",
    "nodemon": "^2.0.15",
    "pg": "^8.7.3",
    "typeorm": "^0.3.5",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^2.2.1",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.9",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@types/pg": "^8.6.5",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.2",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "eslint": "^8.13.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "faker": "^5.5.3",
    "git-commit-msg-linter": "^4.1.1",
    "husky": "4.3.8",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  }
}
