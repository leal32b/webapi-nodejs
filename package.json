{
  "name": "webapi-nodejs",
  "version": "1.0.0",
  "description": "Nodejs Webapi template",
  "main": "index.js",
  "scripts": {
    "start": "node dist/4.main/server.js",
    "debug": "nodemon dist/4.main/server.js -L --watch dist --inspect=0.0.0.0:9222 --nolazy",
    "build": "rimraf dist && tsc -b tsconfig.build.json",
    "build:watch": "npm run build -- -w",
    "up": "docker-compose run --rm start_dependencies",
    "down": "docker-compose down",
    "test": "jest --passWithNoTests --no-cache --runInBand --silent --noStackTrace",
    "test:verbose": "jest --passWithNoTests --no-cache --runInBand",
    "test:unit": "npm test -- -c jest-unit.config.js --watch",
    "test:e2e": "npm test -- -c jest-e2e.config.js --watch",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leal32b/webapi-nodejs.git"
  },
  "author": "leal32b",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/leal32b/webapi-nodejs/issues"
  },
  "homepage": "https://github.com/leal32b/webapi-nodejs#readme",
  "_moduleAliases": {
    "@": "dist"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^2.1.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.8",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.3",
    "@types/supertest": "^2.0.11",
    "@types/validator": "^13.6.3",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "faker": "^5.5.3",
    "git-commit-msg-linter": "^3.2.8",
    "jest": "^27.2.5",
    "lint-staged": "^11.2.0",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "husky": "^4.3.8",
    "module-alias": "^2.2.2",
    "mongodb": "^4.1.3",
    "nodemon": "^2.0.13",
    "validator": "^13.6.0"
  }
}
