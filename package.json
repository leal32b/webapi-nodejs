{
  "name": "webapi-nodejs",
  "version": "1.0.0",
  "engines": {
    "node": "^16.15.1",
    "npm": "^8.11.0"
  },
  "description": "Nodejs Webapi template",
  "main": "dist/common/4.main/server.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leal32b/webapi-nodejs.git"
  },
  "author": "leal32b",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/leal32b/webapi-nodejs/issues"
  },
  "homepage": "https://github.com/leal32b/webapi-nodejs#readme",
  "scripts": {
    "start": "node dist/common/4.main/server.js",
    "debug": "nodemon dist/common/4.main/server.js -L --watch dist --inspect=0.0.0.0:9222 --nolazy",
    "build": "rimraf dist && npm run copy:templates && npm run tsc && tsc-alias",
    "build:watch": "npm run build && (concurrently 'npm run tsc -- -w' 'tsc-alias -w')",
    "tsc": "tsc -b tsconfig.build.json",
    "copy:templates": "copyfiles -u 1 src/**/templates/* dist/",
    "docker:up": "docker-compose up webapi -d",
    "docker:stop": "docker-compose stop",
    "docker:attach": "docker attach --sig-proxy=false webapi-container",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm",
    "migration:generate": "npm run typeorm -- migration:generate -d src/common/3.infra/persistence/postgres/data-sources/postgres-default.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/common/3.infra/persistence/postgres/data-sources/postgres-default.ts",
    "eslint": "eslint '{src,test}/**' --fix",
    "jscpd": "jscpd",
    "test": "vitest",
    "test:verbose": "vitest --silent=false",
    "test:watch": "vitest --silent=false --watch",
    "test:ci": "vitest --coverage",
    "prepare": "if test $NODE_ENV = test; then husky install; fi"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "amqplib": "^0.10.3",
    "argon2": "^0.30.3",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.1.3",
    "express": "^4.18.2",
    "handlebars": "^4.7.7",
    "i18next": "^22.5.0",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^5.6.0",
    "nodemailer": "^6.9.3",
    "nodemon": "^2.0.22",
    "pg": "^8.11.0",
    "pg-mem": "^2.6.12",
    "rimraf": "^5.0.1",
    "swagger-ui-express": "^4.6.3",
    "tsc-alias": "^1.8.6",
    "typeorm": "^0.3.16",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@shelf/jest-mongodb": "^4.1.7",
    "@types/amqplib": "^0.10.1",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.2.5",
    "@types/nodemailer": "^6.4.8",
    "@types/pg": "^8.10.1",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@vitest/coverage-istanbul": "^0.31.4",
    "concurrently": "^8.1.0",
    "eslint": "^8.42.0",
    "eslint-config-standard-with-typescript": "^35.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "git-commit-msg-linter": "^5.0.4",
    "husky": "^8.0.3",
    "jscpd": "^3.5.9",
    "lint-staged": "^13.2.2",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "vitest": "^0.31.4"
  }
}
