{
  "name": "webapi-nodejs",
  "version": "1.0.0",
  "engines": {
    "node": "^16.15.1",
    "npm": "^9.6.1"
  },
  "description": "Nodejs Webapi template",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leal32b/webapi-nodejs.git"
  },
  "author": "leal32b",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/leal32b/webapi-nodejs/issues"
  },
  "homepage": "https://github.com/leal32b/webapi-nodejs#readme",
  "_moduleAliases": {
    "@/core": "dist/core",
    "@/communication": "dist/modules/communication",
    "@/user": "dist/modules/user"
  },
  "scripts": {
    "start": "node dist/core/4.main/server.js",
    "debug": "nodemon dist/core/4.main/server.js -L --watch dist --inspect=0.0.0.0:9222 --nolazy",
    "build": "rimraf dist && npm run copy:templates && tsc -b tsconfig.build.json",
    "build:watch": "npm run build -- -w",
    "copy:templates": "copyfiles -u 1 src/**/templates/* dist/",
    "docker:up": "docker-compose run --rm start_dependencies",
    "docker:down": "docker-compose down",
    "docker:attach": "docker attach --sig-proxy=false webapi-container",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm",
    "migration:generate": "npm run typeorm -- migration:generate -d src/core/3.infra/persistence/postgres/data-sources/postgres-default.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/core/3.infra/persistence/postgres/data-sources/postgres-default.ts",
    "eslint": "eslint '{src,test}/**' --fix",
    "jscpd": "jscpd",
    "test": "vitest",
    "test:verbose": "vitest --silent=false",
    "test:watch": "vitest --silent=false --watch",
    "test:ci": "vitest --coverage",
    "prepare": "if test $NODE_ENV = test; then husky install; fi"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "argon2": "^0.30.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "handlebars": "^4.7.7",
    "i18next": "^22.4.11",
    "jsonwebtoken": "^9.0.0",
    "module-alias": "^2.2.2",
    "mongodb": "^5.1.0",
    "nodemailer": "^6.9.1",
    "nodemon": "^2.0.21",
    "pg": "^8.10.0",
    "pg-mem": "^2.6.8",
    "swagger-ui-express": "^4.6.2",
    "typeorm": "^0.3.12"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@shelf/jest-mongodb": "^4.1.7",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.15.3",
    "@types/nodemailer": "^6.4.7",
    "@types/pg": "^8.6.6",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@vitest/coverage-istanbul": "^0.29.3",
    "copyfiles": "^2.4.1",
    "eslint": "^8.36.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "git-commit-msg-linter": "^4.9.2",
    "husky": "^8.0.3",
    "jscpd": "^3.5.3",
    "lint-staged": "^13.2.0",
    "rimraf": "^4.4.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2",
    "vitest": "^0.29.3"
  }
}
