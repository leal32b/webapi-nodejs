{
  "name": "webapi-nodejs",
  "version": "1.0.0",
  "engines": {
    "node": "^16.15.1",
    "npm": "^8.11.0"
  },
  "description": "Nodejs Webapi template",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leal32b/webapi-nodejs.git"
  },
  "author": "leal32b",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/leal32b/webapi-nodejs/issues"
  },
  "homepage": "https://github.com/leal32b/webapi-nodejs#readme",
  "_moduleAliases": {
    "@/core": "dist/core",
    "@/user": "dist/modules/user"
  },
  "scripts": {
    "start": "node dist/core/4.main/server.js",
    "debug": "nodemon dist/core/4.main/server.js -L --watch dist --inspect=0.0.0.0:9222 --nolazy",
    "build": "rimraf dist && tsc -b tsconfig.build.json",
    "build:watch": "npm run build -- -w",
    "docker:up": "docker-compose run --rm start_dependencies",
    "docker:down": "docker-compose down",
    "docker:attach": "docker attach webapi-container",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm -- migration:generate -d src/core/3.infra/persistence/postgres/data-sources/default.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/core/3.infra/persistence/postgres/data-sources/default.ts",
    "eslint": "eslint 'src/**' --fix",
    "test": "jest --passWithNoTests --no-cache --runInBand --silent --noStackTrace",
    "test:verbose": "jest --passWithNoTests --no-cache --runInBand",
    "test:unit": "npm test -- -c jest-unit.config.js --watch",
    "test:integration": "npm test -- -c jest-integration.config.js --watch",
    "test:ci": "npm test -- --coverage",
    "prepare": "if test $NODE_ENV = test; then husky install; fi"
  },
  "dependencies": {
    "ajv": "^8.11.0",
    "argon2": "^0.29.1",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "nodemon": "^2.0.19",
    "pg": "^8.7.3",
    "typeorm": "^0.3.7"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.3.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.0.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^18.0.0",
    "@types/pg": "^8.6.5",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "eslint": "^8.19.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.4",
    "eslint-plugin-promise": "^6.0.0",
    "git-commit-msg-linter": "^4.1.3",
    "husky": "^8.0.0",
    "jest": "^29.0.2",
    "lint-staged": "^13.0.3",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.3",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.2"
  }
}
