{
  "name": "webapi-nodejs",
  "version": "1.0.0",
  "engines": {
    "node": "^20.11.0",
    "npm": "^10.2.4"
  },
  "description": "Nodejs Webapi template",
  "main": "dist/common/4.main/server.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leal32b/webapi-nodejs.git"
  },
  "author": "leal32b",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/leal32b/webapi-nodejs/issues"
  },
  "homepage": "https://github.com/leal32b/webapi-nodejs#readme",
  "scripts": {
    "start": "node dist/common/4.main/server.js",
    "debug": "nodemon dist/common/4.main/server.js -L --watch dist --inspect=0.0.0.0:9222 --nolazy",
    "build": "rimraf dist && npm run copy:templates && npm run tsc && tsc-alias",
    "build:watch": "npm run build && (concurrently 'npm run tsc -- -w' 'tsc-alias -w')",
    "tsc": "tsc -b tsconfig.build.json",
    "copy:templates": "copyfiles -u 1 src/**/templates/* dist/",
    "docker:up": "docker-compose up webapi -d",
    "docker:down": "docker-compose down",
    "docker:attach": "docker attach --sig-proxy=false webapi-container",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm",
    "migration:generate": "npm run typeorm -- migration:generate -d src/common/3.infra/persistence/postgres/data-sources/postgres-default.data-source.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/common/3.infra/persistence/postgres/data-sources/postgres-default.data-source.ts",
    "script:init-persistence": "ts-node -r tsconfig-paths/register src/common/4.main/scripts/init-persistence.ts",
    "eslint": "eslint '{src,test}/**' --fix",
    "jscpd": "jscpd",
    "test": "vitest",
    "test:verbose": "vitest --silent=false",
    "test:watch": "vitest --silent=false --watch",
    "test:ci": "vitest --coverage",
    "prepare": "if test $NODE_ENV = test; then husky install; fi"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "amqplib": "^0.10.3",
    "argon2": "^0.40.1",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "handlebars": "^4.7.8",
    "i18next": "^23.10.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.2.0",
    "mongoose": "^8.1.1",
    "nodemailer": "^6.9.12",
    "nodemon": "^3.1.0",
    "pg": "^8.11.3",
    "pg-mem": "^2.8.1",
    "rimraf": "^5.0.5",
    "swagger-ui-express": "^5.0.0",
    "tsc-alias": "^1.8.8",
    "typeorm": "^0.3.19",
    "winston": "^3.12.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@shelf/jest-mongodb": "^4.2.0",
    "@types/amqplib": "^0.10.5",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.25",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.11.2",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@vitest/coverage-istanbul": "^1.3.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "git-commit-msg-linter": "^5.0.7",
    "husky": "^9.0.11",
    "jscpd": "^3.5.10",
    "lint-staged": "^15.2.2",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^1.3.1"
  }
}
