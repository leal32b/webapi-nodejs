{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "module": "commonjs",
    "target": "esnext",
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "skipLibCheck": true,
    "types": ["vitest/globals"],
    "paths": {
      "@/core/*": ["src/core/*"],
      "@/communication/*": ["src/modules/communication/*"],
      "@/user/*": ["src/modules/user/*"],
      "~/fakes/*": ["test/_doubles/fakes/*"],
      "~/stubs/*": ["test/_doubles/stubs/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
