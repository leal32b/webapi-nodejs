{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "module": "commonjs",
    "target": "esnext",
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["vitest/globals"],
    "paths": {
      "@/common/*": ["src/common/*"],
      "~/common/*": ["test/common/*"],
      "@/*": ["src/modules/*"],
      "~/*": [ "test/modules/*"],
    }
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
