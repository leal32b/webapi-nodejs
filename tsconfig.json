{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "module": "commonjs",
    "target": "esnext",
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["test/*"]
    },
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
